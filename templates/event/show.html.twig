{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Startime</th>
                <td>{{ event.startime ? event.startime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{{ event.endtime ? event.endtime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ event.place }}</td>
            </tr>
            <tr>
                <th>Picture1</th>
                <td>{{ event.picture1 }}</td>
            </tr>
            <tr>
                <th>Picture2</th>
                <td>{{ event.picture2 }}</td>
            </tr>
            <tr>
                <th>Picture3</th>
                <td>{{ event.picture3 }}</td>
            </tr>
            <tr>
                <th>Picture4</th>
                <td>{{ event.picture4 }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
