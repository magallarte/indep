
{% extends 'base.html.twig' %}
{% use "adhesion.html.twig" %}
{% block title %}Adhérent{% endblock %}

{% block top %}
	{{ parent() }}
{% endblock %}

{% block body %}

<!-- Haut de page -->

	<div class="popular page_section">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<h1>Adhérent - LISTE</h1>
					</div>
				</div>
			</div>

<!-- Formulaire -->

    <div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Tel</th>
                <th>Uptodate_membership_fee</th>
                <th>Picture</th>
                <th>Address</th>
                <th>Zip_code</th>
                <th>City</th>
                <th>School_list_position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.uptodateMembershipFee ? 'Yes' : 'No' }}</td>
                <td>{{ user.picture }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.zipCode }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.schoolListPosition }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>

    </div>
{% endblock %}
